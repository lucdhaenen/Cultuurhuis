@{
    ViewBag.Title = "Bevestiging";
}

<h1>Bevestiging reservaties
    <img src="~/Content/images/logo_bevestigen.png" alt="reserveren" />
</h1>
<nav>
    <ul>
        <li><a href="@Url.Action("Index", "Home")">Voorstellingen</a></li>
        <li><a href="@Url.Action("Mandje", "Home")">Reservatiemandje</a></li>
    </ul>
</nav>
<br />
<br />
<br />
@if (Session["klant"] != null)
	{
        var klant = (MVC4_Cultuurhuis.Models.Klant)Session["klant"];
        ViewBag.klant = klant.Voornaam + " " + klant.Familienaam + " " + klant.Straat + " " + klant.HuisNr + " " +
        klant.Postcode + " " + klant.Gemeente;
	}
<form method="post" action="~/Home/Bevestiging">
    <h2>Stap 1: Wie ben je?</h2>
    <dl>
        <dt>Gebruikersnaam:</dt>
        <dd>
            <input name="naam" id="naam" type="text" />
        </dd>
        <dt>Paswoord:</dt>
        <dd>
            <input name="paswoord" id="paswoord" type="password" />
        </dd>
    </dl>
    <p>
        <input type="submit" name="zoek" value="Zoek me op"
                @if (ViewBag.klant != null) { <text>disabled</text> } />
        <input type="submit" name="nieuw" value="Ik ben nieuw"
                @if (ViewBag.klant != null) { <text>disabled</text> } />
    </p>
    <p>@ViewBag.klant @ViewBag.errorMessage</p>
    <h2>Stap 2: Bevestigen</h2>
    <p>
        <input type="submit" name="bevestig" value="Bevestigen"
               @if (ViewBag.klant == null) { <text>disabled</text>  } />
    </p>
</form>
